PORT=3000
GOOGLE_API_KEY=

DB_HOST=localhost
DB_PORT=3306
DB_USER=
DB_PASS=
DB_NAME=

# Database Switching Configuration
# Options: 'mysql', 'mongo'
DB_TYPE=mongo

# Jira MCP Configuration
# For Cloud: Use Email + API Token
# For Private/Data Center: Use Personal Access Token (PAT) as JIRA_API_TOKEN, leave JIRA_EMAIL empty
JIRA_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=your-api-token
# Disable SSL verification for self-signed certificates (optional)
NODE_TLS_REJECT_UNAUTHORIZED=0

# SMTP Configuration (Resend Example)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=465
# SMTP_USER=resend
# SMTP_PASS=re_123456789...
# SMTP_SECURE=true
# SMTP_FROM="onboarding@resend.dev"

JWT_SECRET=your-secret-key